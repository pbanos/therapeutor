'use strict'

describe 'Controller: MainCtrl', ->

  # load the controller's module
  beforeEach module '<%=code_suitable(name)%>'

  MainCtrl = {}
  scope = {}

  # Initialize the controller and a mock scope
  beforeEach inject ($controller, $rootScope) ->
    scope = $rootScope.$new()
    MainCtrl = $controller 'MainCtrl', {
      $scope: scope
    }

  it 'should have a default Therapy order list with <%= therapies.count %> elements', ->
    expect(scope.defaultTherapyOrder.length).toBe <%= therapies.count %>
