<div class="jumbotron">
    <p class="lead">
    <img src="images/logo.png" alt="<%=name%>"><br>
    </p>
</div>

<div class="row marketing">
  <p class="alert alert-warning">
    <strong>Aviso importante</strong>
    <br/>
    <%=disclaimer%>
  </p>
</div>

<%- sections.each do |section| -%>
<div class="row marketing" id="<%= section.name %>">
  <label><%= section.name%></label>
  <ul>
  <%- section.questions.each do |question| -%>
    <li>
      <p><%= question.text %></p>
      <div class="form-group">
      <%- if question.variables.length == 1 -%>
        <%- variable = question.variables.first -%>
        <div class="radio">
          <label>
            <input type="radio" name="<%= variable.code_suitable_name %>" data-ng-value="true" ng-model="answers.<%= variable.code_suitable_name %>">
            <%= question.yes_text %>
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="<%= variable.code_suitable_name %>" data-ng-value="false" ng-model="answers.<%= variable.code_suitable_name %>">
              <%= question.no_text %>
          </label>
        </div>
      <%- else -%>
        <%- question.variables.each do |variable| -%>
        <label>
          <input type="checkbox" ng-model="answers.<%= variable.code_suitable_name %>"> <%= question.variable_text(variable) %>
        </label>
        <%- end -%>
      <%- end -%>
      </div>
    </li>
  <%- end -%>
  </ul>
</div>
<%- end -%>

<%- def boolean_expression_to_js(expression)
  case expression
  when Therapeutor::BooleanExpression::BooleanConstant then expression.value.to_s
  when Therapeutor::BooleanExpression::Variable then "answers.#{variable(expression.name).code_suitable_name}"
  when Therapeutor::BooleanExpression::NotExpression then "!answers.#{variable(expression.operand.name).code_suitable_name}"
  when Therapeutor::BooleanExpression::AndExpression then and_to_js(expression)
  when Therapeutor::BooleanExpression::OrExpression then or_to_js(expression)
  end
end
def and_to_js(expression)
  "(#{expression.operands.map do |operand|
    boolean_expression_to_js(operand)
  end.join(' && ')})"
end
def or_to_js(expression)
  expression.operands.map do |operand|
    boolean_expression_to_js(operand)
  end.join(' ||Â ')
end
def color_to_alert_class(color)
  "alert-#{{
    green: 'success',
    yellow: 'warning',
    red: 'danger'
  }[color.to_sym]}"
end-%>

<div class="row marketing" id="evaluation">
  <ul>
    <%- therapies.each do |therapy| -%>
    <li ng-show="showCompleteEvaluation || visible(therapies.<%= therapy.code_suitable_name%>)">
      <label><%= therapy.label %></label>
      <p>
        <%= therapy.description%>
      </p>
      <%- recommendation_levels.each do |recommendation_level| -%>
      <div class="alert <%=color_to_alert_class(recommendation_level.color)%>" ng-show='therapies.<%= therapy.code_suitable_name%>.<%= recommendation_level.code_suitable_name%>(answers)'>
        <%= recommendation_level.label %>
        <p>
          <%= recommendation_level.description%>
        </p>
        <ul>
          <%- level_condition = therapy.level_conditions.detect do |level_condition|
            level_condition.level == recommendation_level
          end
          (level_condition ? level_condition.conditions : []).each do |condition| -%>
            <li ng-show='<%= boolean_expression_to_js(condition.condition.to_dnf) %>'><%= condition.text %></li>
          <%- end -%>
        </ul>
        <br/>
        <%- condition_count_orders.each do |preference_order| -%>
        <div ng-show='therapies.<%= therapy.code_suitable_name%>.<%= preference_order.code_suitable_name%>(answers) > 0'>
          <%= preference_order.text %>
          <ul>
            <%- order_condition = therapy.order_conditions.detect do |order_condition|
              order_condition.preference_order == preference_order
            end
            (order_condition ? order_condition.conditions : []).each do |condition| -%>
              <li ng-show='<%= boolean_expression_to_js(condition.condition.to_dnf) %>'><%= condition.text %></li>
            <%- end -%>
          </ul>
        </div>
        <%- end -%>
      </div>
      <%- end -%>
    </li>
    <%- end -%>
  </ul>
  <%- preference_orders.each do |order| -%>
  <div ng-show='drawResolvedBy<%= order.code_suitable_name.capitalize%>()'>
    <%= order.draw_resolution_text %>
  </div>
  <%- end -%>
  <div ng-show='suitableTherapies().length == 0'>
    <%= no_suitable_therapies_text %>
  </div>
  <div>
    <label>
      <input type="checkbox" ng-model="showCompleteEvaluation"> <%= show_complete_evaluation_text %>
    </label>
  </div>
</div>
