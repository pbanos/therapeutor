'use strict'

###*
 # @ngdoc overview
 # @name <%= code_suitable(name) %>
 # @description
 # # <%= code_suitable(name) %>
 #
 # Main module of the application.
###
angular
  .module '<%= code_suitable(name) %>', [
    'ngAnimate',
    'ngCookies',
    'ngResource',
    'ngRoute',
    'ngSanitize',
    'ngTouch'
  ]
  .config ($routeProvider) ->
    $routeProvider
      .when '/',
        templateUrl: 'views/main.html'
        controller: 'MainCtrl'
      .when '/about',
        templateUrl: 'views/about.html'
        controller: 'AboutCtrl'
      .otherwise
        redirectTo: '/'
