      <%= code_suitable(therapy.name) %>: <%= code_suitable(therapy.name)%>
  <%- end -%>
    $scope.defaultTherapyOrder = [<%= therapies.map{|t| code_suitable(t.name)}.join(', ') %>]
    $scope.showCompleteEvaluation = false
